*{
	margin:0;
	padding: 0;
}
body{
	background-color: #F5F5F5;
	font-family: 微软雅黑;
}
li{
	list-style: none;
}
a:hover{
	text-decoration: none;
}
article{
	width: 1190px;
	margin:0 auto;
}
article h3{
	font-size: 22px;
	font-weight: bold;
}
article a{
	color: #333333;
	font-size: 16px;
	line-height: 40px;
}
article a:hover{
  	color: #FF812C;
}

#today img{
	width: 287px;
	height: 216px;
	transition:all 0.2s ease;
}
#today img:hover{
	transform: scale(1.1);
}
#today>ul>li>a{
	display: inline-block;
	width: 287px;
	height: 216px;
	overflow: hidden;
}
#today li{
	background-color: white;
	padding-bottom: 8px;
}
#today>ul>li>div{
	padding: 0 15px;
}
#today>ul{
	margin-bottom: 15px;
}
#today>ul>li{
	float: left;
}
#today>ul>li:first-child~*{
	margin-left: 14px;
}
#today>ul>li>div>p{
	font-size:13px;
	color: #9B9B9B;
}
#today>ul>li>div>div>p{
	color: #9B9B9B;
}
#today>ul>li>div>div>p:last-child{
	margin-top: 10px;
}
#today>ul>li>div>div>p>b{
	font-size: 24px;
	color:#EE4400;
	font-weight: normal;
	padding-right: 5px;
	font-family: Helvetica;
}
#today>ul>li>div>div>p>span{
	border: 1px solid #9B9B9B;
	border-radius: 10px;
	padding: 0 5px;
	margin-right: 10px;
}


/*车主故事*/
#story>div{
	height: 480px;
	width: 100%;
	border:1px solid black;
}
#story>div>.left-story{
	width: 667px;
}



/*上面的两个盒子*/
.top-box{
	float: left;
	width:333px;
	padding: 18px;
	background-color: white;
}
.top-box img{
	width: 296px;
	height: 197px;
}
.top-box>div{
	padding: 0 15px;
}
.top-box>div>p{
	font-size: 12px;
	line-height: 24px;
	color: #7E7E7E;
	margin-bottom: 0;
}
.top-box>div>a{
	line-height: 50px;
}
.one{
	margin-right: 1px;
}




.bottom-box{
	margin-top: -9px;
	padding: 25px 85px;
	background-color: white;
}
.bottom-box img{
	width: 159px;
	height: 99px;
}
.bottom-box>div{
	width: 315px;
}
.bottom-box>div>p{
	font-size: 12px;
	color: #7E7E7E
}


.right-story{
	width:522px;
	background-color: white;
	padding: 18px 37px;
}
.right-story img{
	width: 159px;
	height: 99px;
}
.right-story>ul>li{
	border-bottom:1px solid #F5F5F5;
}
.right-story>ul>li:nth-child(1){
	padding-bottom: 24px;
}
.right-story>ul>li:nth-child(2){
	padding: 24px 0;
}
.right-story>ul>li:nth-child(3){
	padding-top: 24px;
	margin-bottom: 49px;
}
.right-story>ul>li>div{
	width: 270px;
}
.right-story>ul>li>div>a{
	line-height: 16px;
	margin-bottom: 20px;
}
.right-story>ul>li>div>p{
	font-size: 12px;
	color: #7E7E7E;
	margin-top: 20px;
}



#pic{
	margin-bottom: 50px;
}
#pic>img{
	margin-top: 40px;
}